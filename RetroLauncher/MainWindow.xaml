<controls:FlatWindow x:Class="RetroLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:local="clr-namespace:RetroLauncher"
        xmlns:controls="clr-namespace:RetroLauncher.Controls"  
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:command="http://www.galasoft.ch/mvvmlight"
        BorderBrush="#95939E" BorderThickness="1"    
        WindowStartupLocation="CenterScreen"                     
        Height="600" Width="800">
    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <command:EventToCommand Command="{Binding LoadedCommand, Mode=OneWay}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    
    <controls:FlatWindow.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#0E2036" Offset="0"/>
            <GradientStop Color="#FF240E36" Offset="1"/>
        </LinearGradientBrush>
    </controls:FlatWindow.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="100" MaxWidth="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="#500E361D">           
            <ListBox Foreground="White" FontSize="16" Background="Transparent" BorderThickness="0">
                <TextBlock>1</TextBlock>
                <TextBlock>1</TextBlock>
                <TextBlock>1</TextBlock>
                <TextBlock>1</TextBlock>
                <TextBlock>1</TextBlock>
            </ListBox>
        </Grid>

        <Grid Grid.Column="1">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        </Grid>
    </Grid>
</controls:FlatWindow>
