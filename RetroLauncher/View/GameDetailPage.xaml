<Page x:Class="RetroLauncher.View.GameDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RetroLauncher.View"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="800"
      Title="GameDetail" DataContext="{Binding GameDetailViewModel,Source={StaticResource Locator}}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>            
        </Grid.RowDefinitions>

        <!--Главная область-->
        <Grid Grid.Row="1" Margin="7">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="0" VerticalAlignment="Top">
                <TextBlock MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="32" 
                           Text="{Binding SelectedGame.Name}" VerticalAlignment="Center" >
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="7" Opacity="0.6" Color="#FF004C70"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="28" 
                           Text="{Binding SelectedGame.NameSecond}" VerticalAlignment="Center" />                              
            </StackPanel>

            <TextBlock Grid.Row="0" MaxWidth="500" HorizontalAlignment="Left" Foreground="#FFFBFBCC" FontSize="20" 
                           Text="3.7" VerticalAlignment="Center" />

            <StackPanel Grid.Row="0" Margin="0,0,0,20" VerticalAlignment="Bottom" Orientation="Horizontal">
                <TextBlock MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="20" 
                           Text="{Binding SelectedGame.Platform.PlatformName}" VerticalAlignment="Center" />
                <TextBlock Margin="10,0" MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="20" 
                           Text="|" VerticalAlignment="Center" />
                <TextBlock  MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="20" 
                           Text="{Binding SelectedGame.Genre}" VerticalAlignment="Center" />
                <TextBlock Margin="10,0" MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="20" 
                           Text="|" VerticalAlignment="Center" />
                <TextBlock MaxWidth="500" HorizontalAlignment="Left" Foreground="#D3D3D3" FontSize="20" 
                           Text="{Binding SelectedGame.Year}" VerticalAlignment="Center" />
            </StackPanel>


            <ListView ScrollViewer.VerticalScrollBarVisibility="Hidden" 
                      ScrollViewer.HorizontalScrollBarVisibility="Hidden" x:Name="lv" 
                      Margin="10,10,10,20"  Background="Transparent" BorderThickness="0"
                      Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding SelectedGame.Screens}">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid  VerticalAlignment="Top" HorizontalAlignment="Left" Columns="10" ></UniformGrid>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Image MaxWidth="200" Source="{Binding Url}"/>
                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>

            <StackPanel Grid.Row="2" VerticalAlignment="Top">
                <TextBlock MaxWidth="500" HorizontalAlignment="Left" Foreground="#6F6F6F" FontSize="28" 
                           Text="Описание" VerticalAlignment="Center" />
                <Separator Foreground="#6F6F6F"  />

                <TextBlock TextWrapping="Wrap" Margin="0,10,0,0" Text="{Binding SelectedGame.Annotation}" Foreground="#D3D3D3" FontSize="20" />
            </StackPanel>

        </Grid>
